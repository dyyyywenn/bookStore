doctype html
html(lang='en')
  head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href="/stylesheets/style.css")
    // Bootstrap CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
    // Bootstrap 5 CSS
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css' integrity='sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I' crossorigin='anonymous')
    // Font Awesome CSS
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' integrity='sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN' crossorigin='anonymous')

    title Book Store
  body
    header 
      nav.navbar.navbar-expand-lg.navbar-light.bg-white
        .container-fluid
          a.navbar-brand.fw-bolder(href='/' ) Book.Com
          button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.me-auto.mb-2.mb-lg-0
              li.nav-item
                a.nav-link(href='/books') Admin
            form.d-flex
              a.btn.btn-outline-success(style='margin-right:40px;' href='/logout') Log out
              
   section.content
      .container
        .card(style=('margin-top:24px;'))
            .card-header
                | Add Books
            .card-body   
                form(role='form',method='POST' action='/books/edit/#{(id==undefined) ? data.id : id}' enctype='multipart/form-data')
                    .row
                        .col-xs-6
                            .box-body
                                - if(messages.msg_info)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | ×
                                        h4
                                            i.icon.fa.fa-check
                                            | Success!
                                        | !{messages.msg_info}
                                - if(messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | ×
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Title
                                    input(type='text',name='title',value="#{data.title}",placeholder='Enter Title', autofocus, required).form-control
                                .form-group
                                    label
                                        | Description
                                    <br>
                                    textarea(name='description', cols="80", rows="10", required) #{data.description}
                                .form-group
                                    label
                                        | Author
                                    input(type='text',value="#{ (author == undefined) ? data.author : author }",name='author',placeholder='Enter Author', required).form-control
                                .form-group
                                    label
                                        | Publisher
                                    input(type='text',value="#{ (publisher == undefined) ? data.publisher : publisher }",name='publisher',placeholder='Enter Publisher', required).form-control
                                 .form-group
                                    label
                                        | Price
                                    input(type='text',value="#{ (price == undefined) ? data.price : price }",name='price',placeholder='Enter Price',required).form-control
                            .box-footer
                                input(type="hidden",name="_method", value="post")
                                button(type='submit').btn.btn-primary(style=('margin-top:24px;'))
                                    i.fa.fa-pencil 
                                    |  Edit
                                a(href='/books').btn.btn-primary.pull-right(style=('margin-top:24px;'))
                                    | Back
              

           





